<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.fragments.UpdateFragment">

    <View
        android:id="@+id/vwCardFormUp"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/card_form"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="35dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:id="@+id/tiUpdateFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintTop_toTopOf="@id/vwCardFormUp"
        android:hint="First Name"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:startIconDrawable="@drawable/ic_person"
        app:startIconTint="@color/colorPrimary"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_check_circle"
        app:endIconTint="@color/valid"
        app:errorIconDrawable="@drawable/ic_error"
        app:errorIconTint="@color/colorAccent"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="serif">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUpdateFirstName"
            android:maxLength="20"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/opaque"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:id="@+id/tiUpdateLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tiUpdateFirstName"
        android:hint="Last Name"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:fontFamily="serif"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:startIconDrawable="@drawable/ic_person"
        app:startIconTint="@color/colorPrimary"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_check_circle"
        app:endIconTint="@color/valid"
        app:errorIconDrawable="@drawable/ic_error"
        app:errorIconTint="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etUpdateLastName"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/opaque"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:id="@+id/tiUpdatePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tiUpdateLastName"
        android:hint="Phone"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="serif"
        app:prefixText="+34"
        app:prefixTextColor="@color/colorAccent"
        app:counterEnabled="true"
        app:counterMaxLength="9"
        app:startIconDrawable="@drawable/ic_smartphone"
        app:startIconTint="@color/colorPrimary"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_check_circle"
        app:endIconTint="@color/valid"
        app:errorIconDrawable="@drawable/ic_error"
        app:errorIconTint="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp">

        <com.google.android.material.textfield.TextInputEditText
            android:maxLength="9"
            android:inputType="phone"
            android:id="@+id/etUpdatePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/opaque"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:id="@+id/tiUpdateEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tiUpdatePhone"
        android:hint="Email"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22sp"
        android:fontFamily="serif"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="@color/colorPrimary"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_check_circle"
        app:endIconTint="@color/valid"
        app:errorIconDrawable="@drawable/ic_error"
        app:errorIconTint="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp">

    <com.google.android.material.textfield.TextInputEditText
        android:maxLength="30"
        android:inputType="textEmailAddress"
        android:id="@+id/etUpdateEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/opaque"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:id="@+id/tiUpdateEnterprise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tiUpdateEmail"
        android:hint="Enterprise"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:startIconDrawable="@drawable/ic_business"
        app:startIconTint="@color/colorPrimary"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_check_circle"
        app:endIconTint="@color/valid"
        app:errorIconDrawable="@drawable/ic_error"
        app:errorIconTint="@color/colorAccent"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22sp"
        android:fontFamily="serif"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp">

        <com.google.android.material.textfield.TextInputEditText
            android:maxLength="50"
            android:inputType="text"
            android:id="@+id/etUpdateEnterprise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/opaque"/>



    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/ivUpdateProfile"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tiUpdateEnterprise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_photo"
        android:background="@drawable/rounded_image"
        android:visibility="visible"
        >

    </ImageView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btUpdateUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/vwCardFormUp"
        android:background="@drawable/button_style_2"
        android:text="Update"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        >

    </androidx.appcompat.widget.AppCompatButton>



</androidx.constraintlayout.widget.ConstraintLayout>