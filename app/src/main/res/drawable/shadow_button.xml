<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid
                android:color="#80000000"
                />
        </shape>
    </item>

    <item android:bottom="15dp">
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="@color/colorPrimaryGradEnd"
                android:centerColor="@color/colorPrimaryGradCent"
                android:endColor="@color/colorPrimary"
                />
            <stroke
                android:color="@color/colorPrimarydark"
                android:width="1dp"
                />


            <padding
                android:top="0dp"
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                />
        </shape>

    </item>



</layer-list>